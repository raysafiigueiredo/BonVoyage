procedimento banco_de_dados ()
inicio

se pessoa[i] = "" entao
  escreval ()
  escreval ()
  escreval ("Nenhuma pessoa cadastrada!")
  escreval ()
senao
  escreval ("Pessoas Cadastradas: ")
  escreval ()
  para i de 0 ate 1 faca
   escreval ()
   escreval ()
   escreval("Nome do(a) pessoa: ", pessoa [i])
   escreval("Documento: ", documento[i])
   escreval("Casa: ", casa[i])
   escreval("telefone: ", telefone [i])
   escreval("Porque quer viajar: ", motivo[i])
   escreval()
   fimpara
fimse
escreval ("Aperte enter para voltar ao início.")
leia (enter)
limpatela
inicializa ()
limpatela
fimprocedimento

procedimento pesquisar_pessoa ()
inicio



escreva ("Digite o nome da pessoa que deseja procurar: ")
leia (pessoa)
pessoaExistente <- falso
para i de 0 ate 1 faca
se pessoa=pessoa[i] entao
PessoaExistente <- verdadeiro
escreval("Nome da pessoa: ", pessoa[i])
escreval("Documento: ", documento[i])
escreval("Casa: ", casa[i])
escreval("Telefone: ", telefone[i])
escreval("Porque quer viajar: ", porque quer viajar[i])
escreval()
escreval ("Pessoa encontrada.")
escreval ()
i <- 1
escreval ("Aperte enter para voltar ao início.")
leia (enter)
fimse
fimpara
se pessoaExistente = falso entao
escreval ()
escreval ()
escreval ("Pessoa não encontrada  ou opção inválida! verificar os dados!")
leia (enter)
fimse
limpatela
inicializa ()
fimprocedimento




procedimento destinos_disponiveis ()
inicio

escreva ("Digite o nome da pessoa ")
escreva (" deseja escolher o destino? ")
escreval ()
leia (pessoa)
para i de 0 ate 1 faca
  se pessoa=pessoa[i] entao
   escreval("Nome da pessoa: ", pessoa[i])
   escreval("Documento: ", documento[i])
   escreval("Casa: ", casa[i])
   escreval("Telefone: ",telefone[i])
   escreval("Porque quer viajar: ", porque quer viajar[i])
   escreval()
