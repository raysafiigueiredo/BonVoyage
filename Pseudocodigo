fimenquanto
fimprocedimento


procedimento cadastrar_pessoa ()
inicio


      escreval ("Cadastro da pessoa:")
      escreval ()


      para i de 0 ate 1 faca
        se (pessoa [i]="")entao
          escreva("Nome do(a) pessoa: ")
          leia(pessoa[i])
          escreva("Documento: ")
          leia(documento[i])
          escreva("Casa")
          leia(casa[i])
          escreva("Telefone: ")
          leia(telefone[i])
          escreva("Porque quer viajar: ")
          leia(porque [i])
          i <- i+1
          escreval()
          escreval ()
          escreval("+++++++++++++++++++++++++++++++++")
          escreval("+Vc foi cadastrado!+")
          escreval("+++++++++++++++++++++++++++++++++")
          escreval ()
          escreval ()
