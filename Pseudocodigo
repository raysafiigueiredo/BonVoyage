   escreval ("(3)Pacote 7 Dias Antártica: R$ 9.500,00 por pessoa.")
   escreval ()
   escreval  ("Escolha a opção desejada: ")
     leia (destino[j])
     i <- i+j
   limpatela
   escreval ("")
   escreval ("Escolha realizada com sucesso!")
   escreval ("")
   escreval ("Aperte enter para voltar à tela inicial.")
